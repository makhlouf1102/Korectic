{
    "name": "Korektik",
    "optional_permissions": [
        "activeTab",
        "tabs"
    ],
    "version": "1.0.0",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "description": "A simple plugin to check my spelling in French without changing the way people write",
    "manifest_version": 3,
    "author": "Makhlouf H.",
    "action": {
        "default_popup": "index.html",
        "default_title": "Korektik"
    }
}